<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityLoginHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:paddingLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:src="@drawable/ic_gd_return_foreground"/>
    </LinearLayout>
    <TextView
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="请使用钱包密码验证"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="ETH"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:text="选择钱包"
            android:textColor="#c3c8cc" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gd_next_blue_foreground" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
    <View
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c3c8cc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <EditText
            android:id="@+id/edtpass"
            android:clickable="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#fbfcfe"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="#c3c8cc" />


        <ImageView
            android:paddingTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/eyedn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <View
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c3c8cc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/btndangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="确认"
            android:background="#eaedf6"/>
    </LinearLayout>


</LinearLayout>